<div id="testimonial" class="section wb">
    <div class="container">
        <div class="section-title text-center">
            <h3>Get in touch</h3>
            <p class="lead">Let us give you more details about the special offer website you want us. Please fill out the form below. <br>We have million of website owners who happy to work with us!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="contact_form">
                    <div id="message"></div>
                    <%= form_with model: testimonial, class: "row" do |form| %>
                        <fieldset class="row-fluid">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <%= form.text_field :name, class: "form-control", placeholder: "Ivan Ivanov" %>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <%= form.text_field :ocupation, class: "form-control", placeholder: "Developer" %>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <%= form.text_field :title, class: "form-control", placeholder: "Title for testimonial" %>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <%= form.text_area :description, class: "form-control", rows: "6", placeholder: "Give us more details..." %>
                            </div>
                            <div class="col-lg-12 col-md-4 col-sm-4 col-xs-12 text-center">
                                <%= form.submit class: "btn btn-light btn-radius btn-brd grd1 btn-block" %>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->