<div class="testimonial clearfix">
    <div class="desc">
        <h3><i class="fa fa-quote-left"></i><%= testimonial.title %></h3>
        <p class="lead"><%= testimonial.description %></p>
    </div>
    <div class="testi-meta">
        <%= tag :image, src: testimonial.image_url, class: "img-responsive alignleft" %>
        <h4><%= testimonial.name %><small>- <%= testimonial.ocupation %></small></h4>
    </div>
</div>